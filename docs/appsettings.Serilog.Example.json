{
  // ======================================================================
  // Rapidex Logging Configuration Examples
  // ======================================================================
  
  // Standard Microsoft Logging Configuration
  // This section is NOT required if using Rapidex-specific configuration
  // but can coexist for compatibility
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  // ======================================================================
  // Standard Serilog Configuration
  // Enable this by setting UseStandardSerilogConfiguration: true
  // ======================================================================
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/standard-app-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 31,
          "fileSizeLimitBytes": 104857600
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "MyApp"
    }
  },

  // ======================================================================
  // RAPIDEX LOGGING CONFIGURATION - PRODUCTION SETUP
  // Recommended for production environments with optimal performance
  // ======================================================================
  "RapidexLogging": {
    // Log file location
    "LogDirectory": "Logs",
    
    // Log file prefix (e.g., "myapp" creates "myapp-20240101.log")
    "LogFilePrefix": "app",
    
    // Default minimum log level
    // Values: "Trace", "Debug", "Information", "Warning", "Error", "Critical", "None"
    "DefaultMinimumLevel": "Information",
    
    // Create separate file for Error-level logs (app-error-20240101.log)
    // These logs are written immediately without buffering
    "UseSeperateErrorLogFile": true,
    
    // Create separate file for Warning-level logs (app-warning-20240101.log)
    // These logs are written immediately without buffering
    "UseSeperateWarningLogFile": true,
    
    // Use buffering for non-error logs to reduce disk I/O
    // Error and Warning logs are always written immediately
    "UseBufferForNonErrors": true,
    
    // Buffer size in bytes (32KB = 32768)
    "BufferSize": 32768,
    
    // How often to flush the buffer to disk (in seconds)
    // Lower = more immediate, higher = better performance
    "BufferFlushIntervalSeconds": 10,
    
    // Maximum size of a single log file (in bytes)
    // 100MB = 104857600 bytes
    "MaxLogFileSize": 104857600,
    
    // Number of log files to keep (null = unlimited)
    // 31 = keep last 31 days of logs
    "RetainedFileCountLimit": 31,
    
    // Category-specific minimum log levels
    // Use this to suppress noisy framework logs while keeping application logs verbose
    "CategoryMinimumLevels": {
      // Microsoft framework logs - only show warnings and above
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Warning",
      "Microsoft.AspNetCore.Mvc": "Warning",
      "Microsoft.AspNetCore.Routing": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
      
      // System logs - only show warnings and above
      "System": "Warning",
      "System.Net.Http": "Warning",
      "System.Net.Http.HttpClient": "Warning",
      
      // Rapidex framework - show debug level
      "Rapidex": "Debug",
      "Rapidex.Data": "Debug",
      "Rapidex.Base.Common": "Information",
      
      // Application logs - show debug level
      "MyApp": "Debug",
      "MyApp.Services": "Debug",
      "MyApp.Controllers": "Information"
    },
    
    // Create separate log files for specific categories
    // Useful for critical services that need isolated monitoring
    "CategorySeparateFiles": {
      "MyApp.Services.PaymentService": true,
      "MyApp.Services.OrderProcessingService": true,
      "MyApp.Services.IntegrationService": true
    },
    
    // Output template for log entries
    // {Timestamp} = date and time
    // {Level:u3} = log level (3 chars, uppercase)
    // {SourceContext} = logger category name
    // {Message:lj} = log message with literal JSON
    // {NewLine} = line break
    // {Exception} = exception details (if any)
    "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
    
    // Use standard Serilog configuration from "Serilog" section above?
    // false = use only RapidexLogging settings
    // true = use both Serilog and RapidexLogging settings
    "UseStandardSerilogConfiguration": false,
    
    // Write logs to console output?
    // Useful for containerized environments (Docker, Kubernetes)
    "WriteToConsole": false
  }
}
